// Problem:Check if Array Is Sorted and Rotated
// Link: https://leetcode.com/problems/Check-if-Array-Is-Sorted-and-Rotated/
// Time: O(n)
// Space: O(1)
class Solution {
    public boolean check(int[] nums) {
        int c = 0;  // counts how many times the array breaks sorted order
        int n = nums.length;

        // Check adjacent elements
        for (int i = 0; i < n - 1; i++) {
            // If current element is greater than next element,
            // sorted order is broken
            if (nums[i] > nums[i + 1]) {
                c++;
            }
        }
        // Check rotation boundary (last element to first element)
        // Example: [3,4,5,1,2] â†’ 5 > 1 is the rotation break
        if (nums[n - 1] > nums[0]) {
            c++;
        }
        // A sorted or rotated sorted array can have
        // at most one such break
        return c <= 1;
    }
}
